<script>
(function(){
  const slices = document.querySelectorAll('.slice');
  let active = null;

  slices.forEach(slice => {
    slice.addEventListener('click', e => {
      e.stopPropagation();
      if(active === slice){
        slices.forEach(s => s.classList.remove('active','dimmed'));
        active = null;
        return;
      }
      active = slice;
      slices.forEach(s => {
        s.classList.toggle('active', s === slice);
        s.classList.toggle('dimmed', s !== slice);
      });
    });
  });

  document.addEventListener('click', () => {
    slices.forEach(s => s.classList.remove('active','dimmed'));
    active = null;
  });
})();
</script>













